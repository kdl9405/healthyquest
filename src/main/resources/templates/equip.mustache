{{>layout/header}}

<section class="slider_section">
    <div id="myCarousel" class="carousel slide banner-main" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" style="background:url('/img/room.jpg') no-repeat;">

                <!-- ======= Services Section ======= -->
                    <div class="container">

                        <div class="services">
                            <br>
                            <br>

                        <div class="row">
                            <tbody id="tbody">
                            {{#equipments}}

                                <div class="col-lg-1 col-md-8 d-flex align-items-stretch" ></div>


                                <div class="col-lg-4 col-md-8 d-flex align-items-stretch" style="background:url('{{qr_code}}') no-repeat;">
